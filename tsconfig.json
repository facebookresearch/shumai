{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,

    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": true,

    // "bun-types" is the important part
    "types": ["bun-types", "@types/node"],
    "paths": {
      "@shumai/shumai": ["./shumai/index.ts"],
    }
  },
  "exclude": ["examples/**/*.js", "build/**/*", "docs/assets/**/*"]
}
